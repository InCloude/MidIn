<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout_twitter_profile"
    tools:context="com.keenesys.midinclude.midinclude.TwitterProfileActivity">

    <TextView
        style="@style/FacebookProfileText"
        android:id="@+id/twitter_user_name"
        android:layout_below="@+id/twitter_user_id" />
    <TextView
        style="@style/FacebookProfileText"
        android:id="@+id/twitter_user_id"
        android:layout_below="@+id/home_twitter_button" />
    <Button
        style="@style/ButtonXLarge"
        android:onClick="goToTwitterTimeLine"
        android:id="@+id/timeline_twitter_button"
        android:layout_alignParentBottom="true" />

    <Button
        style="@style/ButtonXLarge"
        android:onClick="goToHomeTwitterProfile"
        android:id="@+id/home_twitter_button"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/timeline_twitter_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
